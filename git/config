[init]
    # set the default branch name for new repositories to 'main'
    defaultBranch = main

[core]
    # disable case-insensitive file handling (important for macos/linux)
    ignoreCase = false
    # path to global .gitignore file
    excludesFile = /Users/zhangpeng/.config/git/gitignore_global

[color]
    # enable automatic coloring in git command outputs
    ui = auto

[push]
    # automatically set the remote when creating a new branch
    autoSetupRemote = true

[pull]
    # use rebase instead of merge when pulling changes
    rebase = true

[rebase]
    # automatically stash changes before rebasing, then apply them after
    autoStash = true

[alias]
    # shortcut to list all git aliases
    alias = "config --get-regexp alias"
    # short format for 'git status'
    stat = status -s
    # amend last commit without changing the commit message
    amend = commit --amend --no-edit
    # add all changes and commit in one step
    ac = "!git add -A && git commit -m"
    # simple one-line log with color, showing hash, date, author, and message
    slog = log --pretty=format:'%C(yellow)%h%C(reset) %C(green)%ad%C(reset) %C(blue)%an <%ae>%C(reset) %s' --date=iso
    # graphical log showing all branches with colors, hash, date, author, message, and ref names
    glog = log --graph --all --pretty=format:'%C(yellow)%h%C(reset) %C(green)%ad%C(reset) %C(blue)%an <%ae>%C(reset) %s %C(red)%d%C(reset)' --date=iso
    # shortcut for 'git diff'
    df = diff
    # shortcut to stash changes
    save = stash push
    # shortcut to apply and remove the latest stash
    pop = stash pop

[user]
    # user name
    name = Zhang Peng
    # user email
    email = onnttf@gmail.com
