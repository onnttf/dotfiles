[init]
    # Set default branch name to 'main' for new repositories
    defaultBranch = main

[core]
    # Disable case-insensitive file handling (recommended for macOS/Linux)
    ignoreCase = false
    # Path to global Git ignore file
    excludesFile = ~/.gitignore_global

[color]
    # Enable colored output for better readability
    ui = auto

[push]
    # Automatically set upstream for new branches
    autoSetupRemote = true

[pull]
    # Use rebase instead of merge for pulls
    rebase = true

[alias]
    # List all defined aliases
    alias = "config --get-regexp alias"
    # Short status
    stat = status -s
    # Amend last commit with original message
    amend = commit --amend --no-edit
    # Commit all changes with a message
    ac = "!git add -A && git commit -m"
    # Simplified log with custom format
    slog = log --pretty=format:'%C(yellow)%h%C(reset) %C(green)%ad%C(reset) %C(blue)%an <%ae>%C(reset) %s' --date=iso
    # Graphical log of all branches
    glog = log --graph --all --pretty=format:'%C(yellow)%h%C(reset) %C(green)%ad%C(reset) %C(blue)%an <%ae>%C(reset) %s %C(red)%d%C(reset)' --date=iso
    # Show working directory changes
    df = diff
    # Stash current changes
    save = stash push
    # Apply and remove most recent stash
    pop = stash pop

[user]
    # Set user name and email for commit author
    name = Zhang Peng
    email = onnttf@gmail.com
